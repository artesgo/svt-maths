{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "test": "jest",
    "coverage": "jest --coverage",
    "prettier": "prettier --check --svelte-sort-order scripts-markup-styles ./**/*.svelte",
    "prettier:fix": "prettier --write --svelte-sort-order scripts-markup-styles ./**/*.svelte",
    "validate": "svelte-check"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "@types/jest": "^26.0.14",
    "babel-jest": "^26.5.2",
    "firebase": "^7.22.1",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "lint-staged": "^10.4.0",
    "postcss": "^8.1.1",
    "postcss-load-config": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.0",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.27.0",
    "svelte-check": "^1.0.55",
    "svelte-jester": "^1.1.5",
    "svelte-preprocess": "^4.3.0",
    "tailwindcss": "^1.8.11",
    "ts-jest": "^26.4.1",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{svelte,ts,md}": "prettier --write --svelte-sort-order scripts-markup-styles ./**/*.svelte"
  }
}
